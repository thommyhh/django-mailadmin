{
	"root": true,
	"env": {
		"browser": true,
		"es6": true
	},
	"plugins": [
		"ava"
	],
	"extends": [
		"standard",
		"plugin:ava/recommended",
		"plugin:testcafe/recommended"
	],
	"rules": {
		"no-warning-comments": "warn",
		"quotes": [
			"error",
			"single"
		],
		"space-before-function-paren": "off",
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": "off"
	}
}
